{
    "roots": [
        "<rootDir>/tst"
    ],
    "testMatch": [
        "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/tst/"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 65,
            "lines": 75,
            "statements": 75
        }
    },
    "verbose": true
}
